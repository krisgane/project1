<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orangeBgColor"
        tools:context="rentbazaar.wyby.HomeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/borderColor">
        <TextView
            android:id="@+id/aroundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/nearby_test"
            android:layout_weight="1">
        </TextView>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDistance"
            android:layout_gravity="start"
            android:layout_weight="0.5">
        </Spinner>
        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/searchView"
            android:layout_weight="1"
            android:layout_gravity="end">
        </SearchView>
    </android.support.v7.widget.Toolbar>
        <RelativeLayout
                android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_below="@id/toolbar2"
            android:paddingTop="10dp">
        </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/borderColor"
        android:layout_alignParentBottom="true">
    </android.support.v7.widget.Toolbar>

    <ToggleButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/toggleButton2"
        android:background="@color/borderColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:checked="false"
        android:textOff="@string/rent_string"
        android:textOn="@string/rent_string"
        tools:ignore="RelativeOverlap" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton1"
        android:background="@color/borderColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:textOff="@string/borrow_string"
        android:textOn="@string/borrow_string" />


</RelativeLayout>
